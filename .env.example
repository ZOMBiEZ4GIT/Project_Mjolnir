# ===========================================
# Mjolnir Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# Database (Neon PostgreSQL)
# -------------------------------------------
# Connection string for Neon Serverless PostgreSQL
# Get this from your Neon dashboard: https://console.neon.tech/
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# -------------------------------------------
# Clerk Authentication
# -------------------------------------------
# Get these from your Clerk dashboard: https://dashboard.clerk.com/
# Publishable key (safe to expose in browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxx

# Secret key (keep private, never expose)
CLERK_SECRET_KEY=sk_test_xxxxxxxx

# Authentication URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
